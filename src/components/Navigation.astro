<script>
    import $ from "jquery";
    $(() => {
        $("#mobileNavBtn, #bgOverlay").click(() => {
            $("#bgOverlay").toggleClass("opacity-0 pointer-events-none");
            $("#mobileNav").toggleClass("translate-y-[35rem]");
            $("body").toggleClass("overflow-y-hidden");
        });
    });
</script>
