---
import GlossaryLetter from "./GlossaryLetter.astro";
const { highlightedLetter, vertical } = Astro.props;
const alphabet = [...'ABCDEFGHIJKLMNOPQRSTUVWXYZ'];
---
<div style="scrollbar-width: thin;" class={`w-auto inline-flex ${vertical ? "flex-col overflow-y-auto h-[50vh]" : "flex-row overflow-x-auto"} gap-2 items-center bg-neutral-800 border border-neutral-700 rounded-md p-[2px] px-1`}>
    {alphabet.map(letter =>
        <a href={`/glossary#${letter}`}>
            <GlossaryLetter highlighted={highlightedLetter === letter}>
                <slot>
                    <div>
                        {letter}
                    </div>
                </slot>
            </GlossaryLetter>
        </a>
    )}
</div>
