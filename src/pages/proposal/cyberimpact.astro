                    }*/

                    @media (max-width: 1023px) {
                        #cms-modal table tr, #cms-modal table td {
                            @apply block;
                        }

                        #cms-modal table tr:not(:first-child) td:first-child {
                            @apply pt-10 font-medium;
                        }
                    }
                </style>
            </div>
