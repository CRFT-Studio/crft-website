                    @media (min-width: 1023px) {
                        #ph-modal table tr:last-child td, #ph-modal table tr:last-child th {
                            @apply border-b-0;
                        }
                    }

                    #ph-modal table th {
                        @apply p-3 pb-6 font-medium;
                    }

                    #ph-modal table tr :nth-child(3), #ph-modal table th:nth-child(3) {
