---
import Navigation from '../components/Navigation.astro';
import { Image } from 'astro:assets';
import FeedBear from '../../src/images/FeedBear.png';
import MobiLoud from '../../src/images/MobiLoud.png';
import MixBloom from '../../src/images/MixBloom.png';
import BrandIdentity from '../../src/images/brand-identity.png';
import Design from '../../src/images/design.png';
import Development from '../../src/images/development.png';
import ClientCard from '../components/ClientCard.astro';
import MobiLoudDesktop from '../../src/images/mobiloud-desktop.png';
import FeedBearDesktop from '../../src/images/feedbear-desktop.png';
import HoppyCopyDesktop from '../../src/images/hoppy-copy-desktop.png';
import MixBloomDesktop from '../../src/images/mixbloom-desktop.png';
import LookupCTA from '../components/LookupCTA.astro';
