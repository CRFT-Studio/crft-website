---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import BlogPosts from "../components/BlogPosts.astro";
---
<html lang="en">
    <head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Home</title>
	</head>
    <body>
        <Navigation />
        <section class="mt-12 h-screen">
            <div class="container max-w-[800px]">
                <h1 class="text-4xl font-semibold max-w-[60%] leading-tight mb-10">Blog. <span class="bg-neutral-400 bg-clip-text">Recent thinking and work we've done.</span></h1>
                <BlogPosts />
            </div>
        </section>

        <Footer/>
    </body>
</html>
