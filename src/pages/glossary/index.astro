---
import HeadScripts from "../../components/HeadScripts.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
import GlossaryNav from "../../components/GlossaryNav.astro";

const alphabet = [...'ABCDEFGHIJKLMNOPQRSTUVWXYZ'];
const allTerms = await Astro.glob('./*.md');
const {frontmatter} = Astro.props;
---
<html lang="en">
    <head>
        <HeadScripts
        title=''
        description=''
        />
    </head>

    <body>
        <Navigation/>
        <section class="my-20">
            <div class="container">
                
                <div class="text-center mb-24">
                    <h1 class="text-4xl font-medium leading-normal mb-3">Web Design Glossary</h1>
                    <div class="text-lg">The A-Z glossary for marketers and designers to stay in the know</div>
                </div>    
            
                <div class="grid grid-cols-[0.1fr_1fr]">
                    <div>
                        <div class="sticky top-24">
                            <GlossaryNav vertical/>
                        </div>
                    </div>
                    
                    <div>
                        {alphabet.map((letter) =>
                            <div class="text-5xl mb-10 scroll-mt-24" id={letter}>{letter}</div>
                            <div class="grid grid-cols-3 mb-20">
                                {allTerms.filter((term) =>
                                    term.frontmatter.term.charAt(0).toUpperCase() === letter
                                    ).map((term) => (
                                        <div class="border border-neutral-600 p-5 -m-[1px]">
                                            <div class="text-xl mb-1">{term.frontmatter.term}</div>
                                            <div class="mb-2">{term.frontmatter.phonetic}</div>
                                            <div class="mb-2">{term.frontmatter.shortDefinition}</div>
                                            <a href="/pricing" class="text-orange-300">Learn more â†’</a>
                                        </div>
                                ))}
                            </div>
                        )}
                    </div>
                </div>
            </div>
        </section>
        <Footer/>
    </body>
</html>
