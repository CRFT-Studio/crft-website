---
import Navigation from "../../components/Navigation.astro";
import HeadScripts from "../../components/HeadScripts.astro";
import Footer from "../../components/Footer.astro";

// Dynamically import all location pages except index
const locationModules = Object.entries(import.meta.glob('./*.astro', {eager: true}))
    .filter(([path]) => !path.includes('index.astro'));

// Extract locationData and slug from each module
const locations = locationModules
    .map(([path, mod]) => ({
        ...mod.locationData,
        slug: path.replace('./', '').replace('.astro', ''),
    }))
    .filter(loc => loc.city && loc.country && loc.continent);

// Get sorted lists for rendering
const continents = [...new Set(locations.map(loc => loc.continent))].sort();

function getCountries(continent) {
    return [...new Set(
        locations.filter(loc => loc.continent === continent).map(loc => loc.country)
    )].sort();
}

function getLocations(continent, country) {
    return locations
        .filter(loc => loc.continent === continent && loc.country === country)
        .sort((a, b) => a.city.localeCompare(b.city));
}
